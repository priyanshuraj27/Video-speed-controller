{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.0",
  "description": "Adjust video playback speed on any website with a floating controller and keyboard shortcuts.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_title": "Video Speed Controller",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "commands": {
    "speed-up": {
      "suggested_key": { "default": "Ctrl+Shift+U" },
      "description": "Increase playback speed"
    },
    "speed-down": {
      "suggested_key": { "default": "Ctrl+Shift+D" },
      "description": "Decrease playback speed"
    },
    "reset-speed": {
      "suggested_key": { "default": "Ctrl+Shift+0" },
      "description": "Reset playback speed to 1Ã—"
    }
  }
}
